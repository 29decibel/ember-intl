<h3>Format Time</h3>
<div>{{!intl-time value=now format='hhmmss'}}</div>
<div>{{!intl-time value=now hour='numeric' minute='numeric' hour12=false}}</div>

{{code-snippet name='intl-time.hbs'}}

<h3>Format Relative</h3>
<div>{{!intl-relative value=yesterday}}</div>

<h3>Format Message</h3>

<div>
	{{!intl-message
		messageKey='product.info'
		product='Apple watch'
		price=200
		deadline=yesterday}}
</div>
<div>
	{{!intl-message
		value=messages.photos
		name='Jason'
		numPhotos=num
		takenDate=yesterday}}
</div>

{{code-snippet name='intl-message.hbs'}}

<h3>Format HTML Message</h3>
<div>
	{{!intl-html-message
		messageKey='product.html.info'
		product='Apple watch'
		price=200
		deadline=yesterday}}
</div>
<div>
	{{!intl-html-message value='<strong>{product}</strong>' product='Apple watch'}}
</div>

